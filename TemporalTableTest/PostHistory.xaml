<UserControl x:Class="TemporalTableTest.PostHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemporalTableTest"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d">
    <Grid>
        <Grid>
            <StackPanel>
                <ListBox HorizontalAlignment="Left"
                 Margin="10,10,10,0"
                 Width="200"
                 Height="200"
                 />
                <Button HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,10,0,10"
                    Width="75"
                    Command="{Binding PostNewCommand}"
                    CommandParameter="{Binding NewPostId}"
                    >
                    <WrapPanel>
                        <fa:FontAwesome Icon="Backward" Margin="0,3,8,0"/>
                        <TextBlock>Back</TextBlock>
                    </WrapPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
